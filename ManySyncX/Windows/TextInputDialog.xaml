<Window x:Class="ManySyncX.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RenameDialog" Height="60"
        Width="240" Topmost="True" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}" Loaded="Window_Loaded_1" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Border Name="WindowBorder" BorderBrush="Black" CornerRadius="0,10,0,10" BorderThickness="1" Background="White">
        <Grid Margin="0,0,-0.4,0.2">
            <Button Content="OK" Height="23" HorizontalAlignment="Right" Margin="0,0,80,2" x:Name="OkButton" VerticalAlignment="Bottom" Width="75" Click="OkButton_Click" Background="{x:Null}" />
            <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,0,2,2" x:Name="CancelButton" VerticalAlignment="Bottom" Width="75" Click="CancelButton_Click"
                    Background="{x:Null}" />
            <TextBox Margin="3,3,0,0" x:Name="textBox1" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" VerticalContentAlignment="Center"
                    AutoWordSelection="True" KeyDown="textBox1_KeyDown" />
        </Grid>
    </Border>
</Window>
